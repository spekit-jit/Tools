<div class="wrap">
  <header>
    <h1>Spekit Content Strategy</h1>
    <p class="sub">Live Apps Script app, embedded with an ‚Äúopen in new tab‚Äù fallback.</p>
    <div class="bar">
      <a class="btn" id="openTab" target="_blank" rel="noopener">üîó Open in new tab</a>
      <span class="sub" id="status">Embedding‚Ä¶</span>
    </div>
  </header>
  <div class="frame">
    <iframe id="app" referrerpolicy="no-referrer-when-downgrade" loading="lazy"></iframe>
    <div id="fb" class="fallback">If the app doesn‚Äôt appear, use ‚ÄúOpen in new tab.‚Äù Some GAS apps disallow iframing.</div>
  </div>
</div>
<script>
const URL_APP = "https://script.google.com/macros/s/AKfycbyLhHxtlJRH5L4bpCuHe6sXtPtPVOnYhkV_YyIPkfFwe6--5AVyivKSVV_UJ7A-YVmh/exec";
const frame = document.getElementById("app");
const status = document.getElementById("status");
const fb = document.getElementById("fb");
const openTab = document.getElementById("openTab");
openTab.href = URL_APP;
try{
  frame.src = URL_APP;
  frame.addEventListener("load", ()=> status.textContent = "Embedded ‚úî");
  // If the embed is blocked by headers (X-Frame-Options / CSP), show fallback text after 2s
  setTimeout(()=>{ if(!frame.contentWindow || frame.contentWindow.length===0){ status.textContent="Embed may be blocked"; fb.style.display="block"; } }, 2000);
}catch(e){
  status.textContent = "Could not embed";
  fb.style.display = "block";
}
</script>
